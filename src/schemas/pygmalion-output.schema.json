{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "pantheon/pygmalion-output",
  "title": "Pygmalion Forge Output",
  "description": "Output produced by Pygmalion during Phase 1.5 FORGE â€” specialist persona specifications",
  "type": "object",
  "required": ["agent", "story_key", "complexity_tier", "skipped", "forged_specialists", "summary"],
  "properties": {
    "agent": {
      "type": "string",
      "const": "pygmalion"
    },
    "story_key": {
      "type": "string",
      "pattern": "^[0-9]+-[0-9]+$"
    },
    "complexity_tier": {
      "type": "string",
      "enum": ["trivial", "micro", "light", "standard", "complex", "critical"]
    },
    "skipped": { "type": "boolean" },
    "reason": { "type": "string" },
    "forged_specialists": {
      "type": "array",
      "maxItems": 4,
      "items": {
        "type": "object",
        "required": ["id", "name", "emoji", "title", "role_type", "domain_expertise", "review_focus", "technology_checklist"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "maxLength": 50
          },
          "name": {
            "type": "string",
            "maxLength": 30
          },
          "emoji": {
            "type": "string",
            "maxLength": 4
          },
          "title": {
            "type": "string",
            "maxLength": 80
          },
          "role_type": {
            "type": "string",
            "enum": ["reviewer", "builder"]
          },
          "registry_action": {
            "type": "string",
            "enum": ["forged_new", "evolved", "reused"]
          },
          "registry_match_score": {
            "type": ["number", "null"],
            "minimum": 0,
            "maximum": 1
          },
          "domain_expertise": {
            "type": "string",
            "maxLength": 500
          },
          "review_focus": {
            "type": "array",
            "maxItems": 10,
            "items": { "type": "string", "maxLength": 200 }
          },
          "technology_checklist": {
            "type": "array",
            "maxItems": 15,
            "items": { "type": "string", "maxLength": 200 }
          },
          "known_gotchas": {
            "type": "array",
            "maxItems": 10,
            "items": { "type": "string", "maxLength": 200 }
          },
          "issue_classification_guidance": {
            "type": "string",
            "maxLength": 300
          },
          "suggested_claude_agent_type": {
            "type": "string",
            "enum": [
              "general-purpose", "auditor-security", "dev-frontend", "dev-typescript",
              "dev-python", "dev-go", "dev-java", "dev-rust", "dev-csharp",
              "architect-backend", "database-administrator", "specialist-graphql",
              "dev-ios", "dev-android", "dev-php"
            ]
          }
        }
      }
    },
    "forged_builder": {
      "type": ["object", "null"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
        "name": { "type": "string" },
        "emoji": { "type": "string" },
        "title": { "type": "string" },
        "role_type": { "type": "string", "const": "builder" },
        "domain_expertise": { "type": "string" },
        "build_focus": { "type": "array", "items": { "type": "string" } },
        "technology_patterns": { "type": "array", "items": { "type": "string" } },
        "suggested_claude_agent_type": { "type": "string" }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total_forged", "technologies_detected"],
      "properties": {
        "total_forged": { "type": "integer", "minimum": 0 },
        "total_reused": { "type": "integer", "minimum": 0 },
        "total_evolved": { "type": "integer", "minimum": 0 },
        "technologies_detected": { "type": "array", "items": { "type": "string" } },
        "pantheon_gaps_identified": { "type": "array", "items": { "type": "string" } },
        "registry_actions": {
          "type": "object",
          "properties": {
            "forged_new": { "type": "array", "items": { "type": "string" } },
            "evolved": { "type": "array", "items": { "type": "string" } },
            "reused": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    }
  }
}
